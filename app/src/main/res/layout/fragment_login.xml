<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="16dp" android:paddingLeft="16dp" android:paddingRight="16dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/user_id"
        android:hint="E-Mail"
        android:drawableLeft="@drawable/person"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:drawablePadding="10dp"
        android:textColor="@color/TextColor"
        android:textColorHint="@color/HintColor"/>
    <EditText
        android:drawablePadding="10dp"
        android:id="@+id/password_id"
        android:layout_width="350dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/lock"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/TextColor"
        android:textColorHint="@color/HintColor" />


    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/login_button" />

    <TextView
        android:id="@+id/sign_up_button"
        android:layout_width="111dp"
        android:layout_height="wrap_content"

        android:text="register account"
        android:layout_gravity="right" />
    <FrameLayout android:id="@+id/login_view" android:layout_width="match_parent" android:layout_height="match_parent"></FrameLayout>


</LinearLayout>